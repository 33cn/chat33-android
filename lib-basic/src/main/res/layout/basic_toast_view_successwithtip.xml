    <com.fuzamei.common.widget.FontTextView
        android:id="@+id/iv_showtoast_success"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/toast_tv_title"
        android:layout_alignRight="@+id/toast_tv_title"
        android:paddingTop="10dp"
        android:text="&#xe627;"
        android:gravity="center"
        android:textSize="50sp"
        android:textColor="@color/basic_light_grey"/>

    <!-- 标题 -->
    <TextView
        android:id="@+id/toast_tv_title"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_showtoast_success"
        android:gravity="center"
        android:textColor="@color/basic_white"
        android:padding="16dp"
        android:textSize="14sp"
        android:text="@string/basic_bind_success" />

    <!-- tip -->
    <TextView
        android:id="@+id/toast_tv_tip"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/toast_tv_title"
        android:gravity="center"
        android:textColor="@color/basic_white"
        android:padding="15dp"
        android:textSize="13sp"
        android:text="@string/basic_relogin_tip" />

</RelativeLayout>