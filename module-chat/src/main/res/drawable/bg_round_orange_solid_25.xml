<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <padding android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp" />
            <corners android:radius="25dp" />
            <solid android:color="@color/chat_reward_orange" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <padding android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp" />
            <corners android:radius="25dp" />
            <solid android:color="@color/chat_orange_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp" />
            <corners android:radius="25dp" />
            <solid android:color="@color/chat_orange_disable" />
        </shape>
    </item>
</selector>