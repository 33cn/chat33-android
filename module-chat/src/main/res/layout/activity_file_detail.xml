<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/iconfont"
            android:gravity="center"
            android:text="&#xe68d;"
            android:textColor="@color/chat_color_accent"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_title_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/iv_more"
            android:layout_toEndOf="@+id/iv_back"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/chat_color_title"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/icon_item_more_blue" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_file_type"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/icon_file_other" />

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:paddingStart="38dp"
        android:paddingTop="10dp"
        android:paddingEnd="38dp"
        android:paddingBottom="15dp"
        android:textColor="@color/chat_text_grey_dark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/chat_text_grey_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_open"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_round_textblue_solid_20"
        android:gravity="center"
        android:text="@string/chat_tips_open_with"
        android:textColor="@color/chat_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/open_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:paddingTop="15dp"
        android:text="@string/chat_tips_can_not_open"
        android:textColor="@color/chat_text_grey_dark"
        android:textSize="16sp" />
</LinearLayout>