<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.fzm.chat33.widget.ResizableImageView
            android:id="@+id/iv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:radius="5dp" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            app:srcCompat="@drawable/ic_delete_image" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_add_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_grey_r5_hollow"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/chat_add_card_picture"
            android:textColor="@color/chat_text_grey_light"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
