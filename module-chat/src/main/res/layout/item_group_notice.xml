<?xml version="1.0" encoding="utf-8"?>
<com.fuzamei.common.recycleviewbase.helper.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_gravity="end"
        android:layout_width="75dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_delete_notice"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/shape_red_r5"
            android:gravity="center"
            android:text="@string/chat_action_delete"
            android:textColor="@color/chat_white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rv_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_operate"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="25dp">

            <TextView
                android:id="@+id/tv_notice_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLength="20"
                android:textColor="@color/chat_text_grey_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/chat_text_grey_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_notice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_notice_author"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:maxLines="3"
                android:textColor="@color/chat_text_grey_dark"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>
</com.fuzamei.common.recycleviewbase.helper.SwipeItemLayout>