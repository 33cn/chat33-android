<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-5dp"
    android:layout_marginBottom="-5dp"
    android:background="@drawable/img_operate">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_sl_btn">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:textColor="@color/chat_text_grey_light"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12.02——12.08" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/chat_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="40dp" />

        <TextView
            android:id="@+id/like_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/specialtext"
            android:textColor="@color/chat_text_grey_dark"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_guideline"
            tools:text="12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_praise_my_rank_like"
            android:textColor="@color/chat_text_grey_light"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/like_rank"
            app:layout_constraintTop_toBottomOf="@+id/like_rank" />

        <TextView
            android:id="@+id/like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/specialtext"
            android:textColor="@color/chat_color_accent"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/like_rank"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="123" />

        <TextView
            android:id="@+id/chat_textview7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_praise_like_num"
            android:textColor="@color/chat_text_grey_light"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/like_num"
            app:layout_constraintTop_toBottomOf="@+id/like_num" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/chat_guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="100dp" />

        <TextView
            android:id="@+id/reward_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/specialtext"
            android:textColor="@color/chat_text_grey_dark"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_guideline2"
            tools:text="123" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_praise_my_rank_reward"
            android:textColor="@color/chat_text_grey_light"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/reward_rank"
            app:layout_constraintTop_toBottomOf="@+id/reward_rank" />

        <TextView
            android:id="@+id/reward_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/specialtext"
            android:textColor="@color/chat_reward_orange"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/reward_rank"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="¥123" />

        <TextView
            android:id="@+id/chat_textview8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_praise_reward_amount"
            android:textColor="@color/chat_text_grey_light"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/reward_amount"
            app:layout_constraintTop_toBottomOf="@+id/reward_amount" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="60dp"
            android:src="@mipmap/icon_item_operate"
            app:layout_constraintBottom_toTopOf="@+id/chat_guideline3"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/chat_guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="170dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
