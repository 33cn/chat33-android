<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:background="@color/basic_white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_tips"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/icon_tips_success" />

    <TextView
        android:id="@+id/tips_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/chat_tips_group_info18"
        android:textColor="@color/basic_text_accent"
        android:textSize="16sp" />
</com.qmuiteam.qmui.layout.QMUILinearLayout>